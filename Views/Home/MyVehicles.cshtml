@model List<WorkshopManager.Models.Vehicle>
@{
    ViewData["Title"] = "Moje pojazdy";
}

<h1>Moje pojazdy</h1>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Nie masz przypisanych żadnych pojazdów.</div>
}
else
{
    <table class="vehicle-table">
        <thead>
            <tr>
                <th>Marka</th>
                <th>Model</th>
                <th>Rok produkcji</th>
                <th>Co do naprawienia</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Marka</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.RokProdukcji</td>
                <td>@vehicle.CoNaprawic</td>
            </tr>
        }
        </tbody>
    </table>
}
<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Powrót</a>

