@{
    ViewData["Title"] = "Dodaj pojazd";
    var currentYear = 2025;
    var startYear = 1900;
    var userEmails = ViewBag.UserEmails as List<string>;
}

<h1>Dodaj pojazd</h1>

<form method="post">
    <div>
        <label for="marka">Marka:</label>
        <input type="text" id="marka" name="marka" required />
    </div>
    <div>
        <label for="model">Model pojazdu:</label>
        <input type="text" id="model" name="model" required />
    </div>
    <div>
        <label for="rokProdukcji">Rok produkcji:</label>
        <select id="rokProdukcji" name="rokProdukcji" required>
            <option value="">Wybierz rok</option>
            @for (int rok = currentYear; rok >= startYear; rok--)
            {
                <option value="@rok">@rok</option>
            }
        </select>
    </div>
    <div>
        <label for="coNaprawic">Co do naprawienia:</label>
        <input type="text" id="coNaprawic" name="coNaprawic" required />
    </div>
    <div>
        <label for="opisNaprawy">Opis do naprawienia:</label>
        <textarea id="opisNaprawy" name="opisNaprawy" required></textarea>
    </div>
    <div>
        <label for="userEmail">Przypisz do użytkownika (email):</label>
        <select id="userEmail" name="userEmail" required>
            <option value="">Wybierz użytkownika</option>
            @if (userEmails != null)
            {
                foreach (var email in userEmails)
                {
                    <option value="@email">@email</option>
                }
            }
        </select>
    </div>
    <button type="submit">Wyślij</button>
</form>

